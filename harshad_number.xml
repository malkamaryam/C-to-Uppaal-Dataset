<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int num = 18;
int temp = 0;
int digit = 0;
int Sum = 0;
int result = -1;
</declaration>
	<template>
		<name>HarshadNumber</name>
		<location id="id0" x="-42" y="0">
			<name x="-68" y="-34">start</name>
		</location>
		<location id="id1" x="200" y="0">
			<name x="178" y="8">loop</name>
		</location>
		<location id="id2" x="400" y="0">
			<name x="374" y="-34">check</name>
		</location>
		<location id="id3" x="680" y="0">
			<name x="670" y="-30">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="-8" y="0">temp = num, Sum = 0</label>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="178" y="-136">temp &gt; 0</label>
			<label kind="assignment" x="144" y="-119">digit = temp % 10,
Sum = Sum + digit,
temp = temp / 10</label>
			<nail x="153" y="-59"/>
			<nail x="255" y="-59"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="263" y="-17">temp == 0</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="416" y="-93">Sum != 0 &amp;&amp; num % Sum == 0</label>
			<label kind="assignment" x="484" y="-76">result = 1</label>
			<nail x="527" y="-59"/>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="408" y="0">!(Sum != 0 &amp;&amp; num % Sum == 0)</label>
			<label kind="assignment" x="493" y="17">result = 0</label>
		</transition>
	</template>
	<system>
system HarshadNumber;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
