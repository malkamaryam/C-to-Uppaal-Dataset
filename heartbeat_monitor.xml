<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>
chan hb;        // heartbeat signal
chan miss;      // explicit "missed heartbeat" event (no clocks)
chan alarm;     // monitor raises alarm
chan reset;     // reset clears alarm
</declaration>
	<template>
		<name x="5" y="5">Monitor</name>
		<location id="id0" x="305" y="85">
			<name x="280" y="93">Normal</name>
		</location>
		<location id="id1" x="510" y="0">
			<name x="476" y="-34">Suspect</name>
		</location>
		<location id="id2" x="705" y="85">
			<name x="671" y="93">Alarmed</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="297" y="25">hb?</label>
			<nail x="280" y="51"/>
			<nail x="331" y="51"/>
		</transition>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="408" y="42">miss?</label>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="365" y="-25">hb?</label>
			<nail x="382" y="-8"/>
			<nail x="323" y="68"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="595" y="17">miss?</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="680" y="34">alarm?</label>
			<nail x="675" y="55"/>
			<nail x="735" y="55"/>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="450" y="85">reset?</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Source</name>
		<location id="id9" x="0" y="200">
			<name x="-8" y="212">Run</name>
		</location>
		<init ref="id9"/>
		<transition id="id10">
			<source ref="id9"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="-76" y="195">hb!</label>
			<nail x="-42" y="187"/>
			<nail x="-42" y="221"/>
		</transition>
		<transition id="id11">
			<source ref="id9"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="51" y="170">miss!</label>
			<nail x="17" y="178"/>
			<nail x="30" y="170"/>
			<nail x="42" y="204"/>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Operator</name>
		<location id="id12" x="0" y="340">
			<name x="-8" y="357">Any</name>
		</location>
		<init ref="id12"/>
		<transition id="id13">
			<source ref="id12"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="-93" y="331">alarm!</label>
			<nail x="-34" y="323"/>
			<nail x="-34" y="365"/>
		</transition>
		<transition id="id14">
			<source ref="id12"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="42" y="323">reset!</label>
			<nail x="8" y="331"/>
			<nail x="30" y="310"/>
			<nail x="42" y="357"/>
		</transition>
	</template>
	<system>
system Monitor, Source, Operator;
</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment>No deadlock (Source/Operator provide matching ! actions).</comment>
		</query>
	</queries>
</nta>
