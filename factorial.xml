<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int n = 5;
int fact = 1;
int i = 1;
</declaration>
	<template>
		<name>Factorial</name>
		<location id="id0" x="25" y="0">
			<name x="8" y="-34">Start</name>
		</location>
		<location id="id1" x="250" y="0">
			<name x="229" y="8">Check</name>
		</location>
		<location id="id2" x="246" y="-144">
			<name x="236" y="-174">Multiply</name>
		</location>
		<location id="id3" x="450" y="0">
			<name x="433" y="-34">Done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="306" y="-93">i &lt;= n</label>
			<nail x="306" y="-85"/>
		</transition>
		<transition id="id6">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="assignment" x="68" y="-85">fact = fact * i, i++</label>
		</transition>
		<transition id="id7">
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="guard" x="323" y="-25">i &gt; n</label>
		</transition>
	</template>
	<system>factorial = Factorial(); 
system Factorial;</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
