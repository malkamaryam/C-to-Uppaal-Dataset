<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>
int num = 12321;
int original = 12321;
int reverse = 0;
int digit;
int isPalindrome = 0; /* 1 = true, 0 = false */
</declaration>
	<template>
		<name>PalindromeChecker</name>
		<location id="id0" x="0" y="0">
			<name x="-17" y="-34">start</name>
		</location>
		<location id="id1" x="180" y="0">
			<name x="161" y="8">loop</name>
		</location>
		<location id="id2" x="360" y="0">
			<name x="340" y="-34">check</name>
		</location>
		<location id="id3" x="697" y="0">
			<name x="677" y="-34">end</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="161" y="-110">num &gt; 0</label>
			<label kind="assignment" x="-144" y="-93">digit = num % 10, reverse = reverse * 10 + digit, num = num / 10</label>
			<nail x="119" y="-68"/>
			<nail x="255" y="-68"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="238" y="-17">num == 0</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="433" y="0">reverse == original</label>
			<label kind="assignment" x="450" y="17">isPalindrome = 1</label>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="433" y="-85">reverse != original</label>
			<label kind="assignment" x="450" y="-68">isPalindrome = 0</label>
			<nail x="510" y="-51"/>
		</transition>
	</template>
	<system>palindromeChecker = PalindromeChecker();
system PalindromeChecker;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
