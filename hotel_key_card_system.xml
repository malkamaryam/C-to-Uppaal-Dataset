chan hk_card_insert, hk_card_read, hk_card_valid, hk_card_invalid, hk_door_open, hk_door_close, hk_reset;

int attempts = 0;
const int max_attempts = 2;
  </declaration>
	<template>
		<name x="60" y="30">KeyCardController</name>
		<location id="id0" x="85" y="238">
