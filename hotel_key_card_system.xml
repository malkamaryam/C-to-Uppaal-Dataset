		</transition>
		<transition id="id12">
			<source ref="id4"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="331" y="238">hk_door_close?</label>
		</transition>
		<transition id="id13">
			<source ref="id5"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="0" y="161">hk_reset?</label>
			<label kind="assignment" x="-8" y="144">attempts=0</label>
		</transition>
	</template>
	<template>
