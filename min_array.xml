<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int arr[5] = {9,4,7,2,5};
int min = 9;
int i = 1;
</declaration>
	<template>
		<name>MinArray</name>
		<location id="id0" x="25" y="0">
			<name x="15" y="-30">Start</name>
		</location>
		<location id="id1" x="250" y="0">
			<name x="229" y="8">Check</name>
		</location>
		<location id="id2" x="246" y="-153">
			<name x="221" y="-187">Update</name>
		</location>
		<location id="id3" x="493" y="0">
			<name x="483" y="-30">Done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="306" y="-85">i &lt; 5</label>
			<nail x="306" y="-85"/>
		</transition>
		<transition id="id6">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="assignment" x="-110" y="-93">min = (arr[i] &lt; min ? arr[i] : min), i++</label>
		</transition>
		<transition id="id7">
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="guard" x="348" y="-25">i &gt;= 5</label>
		</transition>
	</template>
	<system>
P_MinArray = MinArray();
system P_MinArray;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
