<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int num = 76;
int square = 0;
int temp = 0;
int power = 1;
int result = -1;
</declaration>
	<template>
		<name>AutomorphicNumber</name>
		<location id="id0" x="-59" y="0">
			<name x="-69" y="-30">start</name>
		</location>
		<location id="id1" x="200" y="0">
			<name x="153" y="8">countDigits</name>
		</location>
		<location id="id2" x="400" y="0">
			<name x="382" y="-34">check</name>
		</location>
		<location id="id3" x="637" y="0">
			<name x="627" y="-30">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="-42" y="-76">square = num * num,
    temp = num,
    power = 1</label>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="170" y="-136">temp &gt; 0</label>
			<label kind="assignment" x="102" y="-136">power = power * 10,
    temp = temp / 10</label>
			<nail x="144" y="-76"/>
			<nail x="263" y="-76"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="255" y="-25">temp == 0</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="425" y="-102">square % power == num</label>
			<label kind="assignment" x="476" y="-85">result = 1</label>
			<nail x="518" y="-68"/>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="416" y="0">square % power != num</label>
			<label kind="assignment" x="467" y="17">result = 0</label>
		</transition>
	</template>
	<system>
system AutomorphicNumber;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
