<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int num = 9;
int square = 0;
int temp = 0;
int digit = 0;
int Sum = 0;
int result = -1;
</declaration>
	<template>
		<name>NeonNumber</name>
		<location id="id0" x="-34" y="0">
			<name x="-44" y="-30">start</name>
		</location>
		<location id="id1" x="200" y="0">
			<name x="187" y="8">loop</name>
		</location>
		<location id="id2" x="400" y="0">
			<name x="374" y="-34">check</name>
		</location>
		<location id="id3" x="600" y="0">
			<name x="590" y="-30">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="0" y="0">square = num * num,
temp = square,
Sum = 0</label>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="170" y="-153">temp &gt; 0</label>
			<label kind="assignment" x="127" y="-136">digit = temp % 10,
Sum = Sum + digit,
temp = temp / 10</label>
			<nail x="144" y="-76"/>
			<nail x="263" y="-76"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="246" y="-25">temp == 0</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="442" y="-76">Sum == num</label>
			<label kind="assignment" x="442" y="-59">result = 1</label>
			<nail x="484" y="-42"/>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="450" y="0">Sum != num</label>
			<label kind="assignment" x="450" y="17">result = 0</label>
		</transition>
	</template>
	<system>
system NeonNumber;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
