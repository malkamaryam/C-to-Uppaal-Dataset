<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int n = 8;       // input
int i;       // loop counter
int result;  // sum of squares
  </declaration>
	<template>
		<name>SumOfSquares</name>
		<location id="id0" x="-34" y="0">
			<name x="-44" y="-30">start</name>
		</location>
		<location id="id1" x="200" y="0">
			<name x="161" y="8">procedure</name>
		</location>
		<location id="id2" x="400" y="0">
			<name x="390" y="-30">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="8" y="0">i = 1, result = 0</label>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="178" y="-110">i &lt;= n</label>
			<label kind="assignment" x="68" y="-93">result = result + i*i, i = i + 1</label>
			<nail x="136" y="-68"/>
			<nail x="272" y="-68"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="272" y="0">i &gt; n</label>
		</transition>
	</template>
	<system>system SumOfSquares;
  </system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
