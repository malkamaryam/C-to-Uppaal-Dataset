<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int num = 1234;
int digit;
int product;
int result;
</declaration>
	<template>
		<name>ProductOfDigits</name>
		<location id="id0" x="0" y="0">
			<name x="-20" y="-30">start</name>
		</location>
		<location id="id1" x="200" y="0">
			<name x="178" y="8">loop</name>
		</location>
		<location id="id2" x="400" y="0">
			<name x="382" y="-34">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="8" y="-17">product = 1</label>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="178" y="-170">num &gt; 0</label>
			<label kind="assignment" x="102" y="-170">digit = num % 10,
    product = product * digit,
    num = num / 10</label>
			<nail x="127" y="-85"/>
			<nail x="280" y="-85"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="263" y="-25">num == 0</label>
			<label kind="assignment" x="229" y="0">result = product</label>
		</transition>
	</template>
	<system>
system ProductOfDigits;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
