<nta>
	<declaration>int board[3][3];
int r = 0;
int c = 0;
int turn = 1;
</declaration>
	<template>
		<name>TicTacToe</name>
		<location id="id0" x="-467" y="0">
			<name x="-498" y="-34">initBoard</name>
		</location>
		<location id="id1" x="0" y="0">
			<name x="-25" y="-34">start</name>
		</location>
		<location id="id2" x="200" y="0">
			<name x="161" y="17">loopCols</name>
		</location>
		<location id="id3" x="442" y="0">
			<name x="407" y="-34">nextRow</name>
		</location>
		<location id="id4" x="654" y="0">
			<name x="637" y="-34">end</name>
		</location>
		<init ref="id0"/>
		<transition id="id5">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="-450" y="8">board[0][0] = 0, board[0][1] = 0, board[0][2] = 0,
board[1][0] = 0, board[1][1] = 0, board[1][2] = 0,
board[2][0] = 0, board[2][1] = 0, board[2][2] = 0</label>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="guard" x="119" y="-110">c &lt; 3 &amp;&amp; turn == 1</label>
			<label kind="assignment" x="51" y="-93">board[r][c] = 1, turn = 2, c = c + 1</label>
			<nail x="119" y="-68"/>
			<nail x="289" y="-68"/>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="guard" x="119" y="85">c &lt; 3 &amp;&amp; turn == 2</label>
			<label kind="assignment" x="51" y="102">board[r][c] = 2, turn = 1, c = c + 1</label>
			<nail x="153" y="76"/>
			<nail x="246" y="76"/>
		</transition>
		<transition id="id9">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="289" y="-25">c &gt;= 3</label>
		</transition>
		<transition id="id10">
			<source ref="id3"/>
			<target ref="id2"/>
			<label kind="guard" x="306" y="42">r &lt; 2</label>
			<label kind="assignment" x="263" y="59">r = r + 1, c = 0</label>
			<nail x="323" y="42"/>
		</transition>
		<transition id="id11">
			<source ref="id3"/>
			<target ref="id4"/>
			<label kind="guard" x="520" y="0">r &gt;= 2</label>
		</transition>
	</template>
	<system>game = TicTacToe();
system game;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
