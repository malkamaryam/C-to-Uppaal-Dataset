<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>int n = 7;
int steps = 0;
int result = -1;
</declaration>
	<template>
		<name>CollatzSequence</name>
		<location id="id0" x="0" y="0">
			<name x="-25" y="-34">start</name>
		</location>
		<location id="id1" x="357" y="-76">
			<name x="322" y="-106">even_case</name>
		</location>
		<location id="id2" x="331" y="144">
			<name x="296" y="114">odd_case</name>
		</location>
		<location id="id3" x="450" y="17">
			<name x="430" y="-13">done</name>
		</location>
		<init ref="id0"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="110" y="-59">n &gt; 1 &amp;&amp; n % 2 == 0</label>
			<label kind="assignment" x="76" y="-42">n = n / 2, steps = steps + 1</label>
		</transition>
		<transition id="id5">
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="guard" x="-17" y="93">n &gt; 1 &amp;&amp; n % 2 != 0</label>
			<label kind="assignment" x="-25" y="110">n = 3 * n + 1, steps = steps + 1</label>
			<nail x="110" y="136"/>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id0"/>
			<nail x="144" y="-102"/>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id0"/>
		</transition>
		<transition id="id8">
			<source ref="id0"/>
			<target ref="id3"/>
			<label kind="guard" x="255" y="-8">n == 1</label>
			<label kind="assignment" x="212" y="8">result = steps</label>
		</transition>
	</template>
	<system>system CollatzSequence;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
